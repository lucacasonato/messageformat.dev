{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.2.2/",
    "preact": "npm:preact"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
